---
import Footer from './Footer.astro';
import NavBar from './NavBar.astro';
import InConstructionAlert from './components/InConstructionAlert.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de-DE">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="theme-color" content="white" />
		
		<title>{title}</title>
	</head>
	<body class="w-fit h-fit overflow-x-clip">
		<div id="page-container" class="relative w-screen h-fit overflow-x-clip bg-custom-pageBackground-blue">
			<NavBar />
			<slot />
			<Footer />
		</div>
	</body>
</html>

<style is:global>
	@import url("https://use.typekit.net/vqe2gyz.css");

	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
			'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
			sans-serif;
	}

	h2 {
		font-family: 'Poppins', 'Merriweather', 'sans-serif';
		font-size: 3rem;
		line-height: 3rem;
		height: 2.6rem;
		font-weight: 500;
		margin-left: 2rem;
		margin-top: -0.4rem;
	}

	h3 {
		margin-left: 3.1rem;
		margin-right: 1.6rem;
		font-family: 'Merriweather', 'din-2014', 'sans-serif';
		font-style: normal;
		font-weight: 400;
		color: #00c5ff;
		height: 1.6rem;
		line-height: 1.3rem;
	}

	h4 {
		margin-top: 1.8rem;
		font-size: 1.5rem;
		font-family: 'din-2014', 'Poppins', 'sans-serif';
		font-weight: 600;
		color: rgb(65, 65, 65);
		margin-left: 1.8rem;
	}

	p.page-text {
		line-height: 1.6rem;
		font-size: 0.95rem;
		padding: 0 1.8rem;
		margin-top: 1rem;
		font-family: 'Merriweather', 'din-2014', 'sans-serif';
	}

	p.page-subtitle {
		text-align: center;
		width: 100%;
		line-height: 1.6rem;
		font-size: 0.9rem;
		padding: 0 1.8rem;
		font-family: 'Merriweather', 'din-2014', 'sans-serif';
	}
</style>
